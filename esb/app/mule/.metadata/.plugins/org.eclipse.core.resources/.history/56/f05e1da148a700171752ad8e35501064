    <ws:consumer-config name="WSCPayment" wsdlLocation="http://localhost:8989/Payment/ValidateCreditCard?wsdl" service="ValidateCreditCard" port="ValidateCreditCard" serviceAddress="http://localhost:8989/Payment/ValidateCreditCard" doc:name="Web Service Consumer"/>
    <cxf:configuration name="CXF_Configuration" enableMuleSoapHeaders="true" initializeStaticBusInstance="true" doc:name="CXF Configuration"/>
    <flow name="paymentFlow">
        <http:listener config-ref="HTTP_Listener_Configuration" path="/payment" allowedMethods="POST" doc:name="HTTP"/>
        <cxf:jaxws-service configuration-ref="CXF_Configuration" soapVersion="1.2" doc:name="CXF" serviceClass="co.com.kallsonys.payment.ws.CreditCardPortType"/>
        <json:object-to-json-transformer returnClass="java.lang.String" doc:name="Object to JSON"/>
        <set-variable variableName="vl_companyId" value="#[json:customerInfo/companyId]" doc:name="vl_companyId"/>
        <set-variable variableName="vl_orderId" value="#[json:orderInfo/orderId]" doc:name="vl_orderId"/>
        <set-variable variableName="vl_orderPrice" value="#[json:orderInfo/orderPrice]" doc:name="vl_orderPrice"/>
        <set-variable variableName="vl_cardType" value="#[json:creditCardInfo/cardType]" doc:name="vl_cardType"/>
        <set-variable variableName="vl_cardNumber" value="#[json:creditCardInfo/cardNumber]" doc:name="vl_cardNumber"/>
        <logger message="&quot;Los valores de las variables son: &quot; + #[flowVars.vl_companyId] + &quot; &quot; + #[flowVars.vl_orderId]  + &quot; &quot; + #[flowVars.vl_orderPrice]  + &quot; &quot; + #[flowVars.vl_cardType] +&quot; &quot; + #[flowVars.vl_cardNumber]" level="INFO" doc:name="Logger"/>
        <parse-template location="paymentRq" doc:name="backPaymentCreditCardRq"/>
        <logger message="&quot;Paso la plantilla&quot; + #[message.payloadAs(java.lang.String)]" level="INFO" doc:name="Logger"/>
        <ws:consumer config-ref="WSCPayment" operation="Payment" doc:name="WSCPayment"/>
        <logger message="&quot;Invoco al servicio del backend&quot;" level="INFO" doc:name="Logger"/>
        <json:object-to-json-transformer returnClass="java.lang.String" doc:name="Object to JSON"/>
        <logger message="&quot;Este fue el que envio &quot; + #[message.payloadAs(java.lang.String)]" level="INFO" doc:name="Logger"/>
    </flow>
